<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_tms_tipos_carga" model="ir.ui.view">
        <field name="name">tms.tipos.carga</field>
        <field name="model">tms.tipos.carga</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Tipos de carga">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="view_tms_tipos_carga_form" model="ir.ui.view">
        <field name="name">tms.tipos.carga.form</field>
        <field name="model">tms.tipos.carga</field>
        <field name="arch" type="xml">
            <form string="Tipo de carga">
                <header>
                </header>
                <sheet>
                    <group>
                        <group colspan="4">  
                            <field name="name" />
                        </group><hr colspan="4"/>
                        <group colspan="4" string="COSTOS PARA EL FLETE">
                            <group col="6" colspan="4"> 
                                <field name="costo_sencillo_vacio"/>
                                <field name="costo_sencillo_medido" />
                                <field name="costo_sencillo_pesado"/>
                            </group>
                            <group col="6" colspan="4"> 
                                <field name="costo_doble_vacio"/>
                                <field name="costo_doble_medido" />
                                <field name="costo_doble_pesado"/>
                            </group>
                            <group col="6" colspan="4"> 
                                <field name="costo_torton_vacio"/>
                                <field name="costo_torton_medido" />
                                <field name="costo_torton_pesado"/>
                            </group>
                            <group col="6" colspan="4"> 
                                <field name="costo_rabon_vacio"/>
                                <field name="costo_rabon_medido" />
                                <field name="costo_rabon_pesado"/>
                            </group>
                        </group><hr colspan="4"/>
                        <group colspan="4" string="TARIFAS PARA EL OPERADOR">
                            <group col="6" colspan="4"> 
                                <field name="tarifa_sencillo_vacio"/>
                                <field name="tarifa_sencillo_medido" />
                                <field name="tarifa_sencillo_pesado"/>
                            </group>
                            <group col="6" colspan="4"> 
                                <field name="tarifa_doble_vacio"/>
                                <field name="tarifa_doble_medido" />
                                <field name="tarifa_doble_pesado"/>
                            </group>
                            <group col="6" colspan="4"> 
                                <field name="tarifa_torton_vacio"/>
                                <field name="tarifa_torton_medido" />
                                <field name="tarifa_torton_pesado"/>
                            </group>
                            <group col="6" colspan="4"> 
                                <field name="tarifa_rabon_vacio"/>
                                <field name="tarifa_rabon_medido" />
                                <field name="tarifa_rabon_pesado"/>
                            </group>
                        </group>

                    </group>
                    <notebook>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


</odoo>